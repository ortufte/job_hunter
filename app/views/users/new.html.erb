<h1> Sign Up! </h1>

<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>

<%= form_tag ("/sessions") do %>
  <p>
  <%= label_tag "Name:" %>
  <%= text_field_tag "name" %>
  </p>
  <p>
  <%= label_tag "Email:" %>
  <%= text_field_tag "email" %>
  </p>
  <p>
  <%= label_tag "Password:" %>
  <%= text_field_tag "password" %>
  </p>
  <p>
  <%= label_tag "Confirm Password:" %>
  <%= text_field_tag "password_confirmation" %>
  </p>
    <%= submit_tag "Sign Up" %>
<% end %>

