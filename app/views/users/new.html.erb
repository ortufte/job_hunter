<h1> Sign Up! </h1>

<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>

<%= form_for @user do |f| %>
  <p>
  <%= f.label :name, 'Name:' %>
  <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :email,'Email:' %>
  <%= f.text_field :email %>
  </p>
  <p>
  <%= f.label :password, 'Password:' %>
  <%= f.text_field :password %>
  </p>
  <p>
  <%= f.label :password_confirmation, 'Confirm Password:' %>
  <%= f.text_field :password_confirmation %>
  </p>
    <%= f.submit "Sign Up" %>
<% end %>

